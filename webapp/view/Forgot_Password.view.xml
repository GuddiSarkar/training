<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.Forgot_Password"
	xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Title" showHeader="false">
				<content>
					<HBox class="hb1-header" height="15%">
						<VBox class="vb1">
							<Label text="Training Management System" class="header-text" textAlign="Center"></Label>
						</VBox>
					</HBox>
					<HBox height="15%" visible="true">
						<VBox class="vblg">
							<Label text="Create New Password" design="Bold" class="login-header-text" textAlign="Center"></Label>
						</VBox>
					</HBox>
					<HBox width="100%" height="60%">
						<VBox class="vbreg" width="45%" height="45%" backgroundDesign="Solid">
							<HBox class="sapUiSmallMarginTop sapUiMediumMarginEnd">
								<Label text="Email Id" class="regLabel" width="120%" textAlign="Left" design="Bold"/>
								<Input id="email" width="75%" type="Text" placeholder="Enter Registered Email" value=""/>
							</HBox>
							<HBox class="sapUiSmallMarginTop sapUiMediumMarginEnd">
								<Label text="New Password" class="regLabel" width="120%" textAlign="Left" design="Bold"/>
								<Input id="pwd" width="75%" type="Password" placeholder="Enter New Password" value=""/>
							</HBox>
							<HBox class="sapUiSmallMarginTop sapUiMediumMarginEnd">
								<Label text="Confirm Password" class="regLabel" width="77%" textAlign="Left" design="Bold"/>
								<Input id="cnfpwd" width="75%" type="Password" placeholder="Confirm New Password" value=""/>
							</HBox>
							<Toolbar class="tbBorder sapUiSmallMarginTop">
									<ToolbarSpacer/>
									<Button text="Update" class="login1" press="onPwdUpdate"/>
									<Button text="Back" class="back" width="13%" press="onPressBack"/>
									<ToolbarSpacer/>
							</Toolbar>
							<!--<Button text="Save password" type="Emphasized" press="onPwd" class="sapUiSmallMarginEnd sapUiSmallMarginTop svpw" />-->
						</VBox>
					</HBox>
				</content>
				<!--</Panel>-->
				<!--	</content>-->
			</Page>
		</pages>
	</App>
</mvc:View>