<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" displayBlock="true" xmlns:l="sap.ui.layout">
	<Dialog id="editFacalty" title="Edit Facalty">
		<content>
			<l:VerticalLayout class="sapUiContentPadding" width="100%">
				<HBox>
					<Input value="" class="acr_inp" id="f_idEd" visible="false"/>
					<VBox class="acr_vb2">
						<HBox>
							<Label text="Facalty Name" width="100px"/>
							<Input value="" class="acr_inp" id="f_nameEd"/>
						</HBox>
						<HBox>
							<Label text="Phone Number" width="100px"/>
							<Input value="" class="acr_inp" id="f_phneEd"/>
						</HBox>
						<HBox>
							<Label text="Salary" width="100px"/>
							<Input value="" class="acr_inp" id="f_salEd"/>
						</HBox>
					</VBox>
					<VBox class="acr_vb22">
						<HBox>
							<Label text="Email" width="100px"/>
							<Input value="" class="acr_inp" id="f_emlEd"/>
						</HBox>
						<HBox>
							<Label text="Course Name" width="100px"/>
							<Input value="" class="acr_inp" id="f_crsnmeEd"/>
						</HBox>
						<HBox>
							<Label text="Date of Joining" width="100px"/>
							<Input value="" class="acr_inp" id="f_dojEd"/>
						</HBox>
					</VBox>
				</HBox>
			</l:VerticalLayout >
		</content>
		<Toolbar>
			<Button text="{i18n>Ok}" press="onOkEdit"/>
			<ToolbarSpacer></ToolbarSpacer>
			<Button text="{i18n>Close}" press="onCloseEdit"/>
		</Toolbar>
	</Dialog>
</core:FragmentDefinition>