<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.stu_facalty"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout">
<App>
		<pages>
			<Page title="{i18n>title}" showHeader="false">
				<content>
					<HBox class="hb1-header" height="15%">
						<VBox class="vb1">
							<Label text="Training Management System" class="header-text" textAlign="Center"></Label>
						</VBox>
						
						<VBox class="vb1">
						<Button icon="sap-icon://log" tooltip="Logoff" class="ib sapUiLargeMarginBottom" press="handleLogoffPress" ariaLabelledBy="editButtonLabel"/>
						</VBox>
					</HBox>
					
					<HBox class="hb3" width="100%" height="75%">
						<l:VerticalLayout id="containerLayout" width="100%">
							<l:BlockLayout id="BlockLayout" background="{/selectedBackground}">
								<l:BlockLayoutRow>
									<l:BlockLayoutCell title="Student" titleAlignment="Center">
										<Image
											src="images/student.ico"
											width="50%"
											height="49%"
											class="stu"
											press="onPressStudent">
										</Image>
									</l:BlockLayoutCell>
									
									<l:BlockLayoutCell title="Facalty" titleAlignment="Center" >
										<Image
											src="images/contacts-icon.png"
											width="50%"
											height="49%"
											class="stu"
											press="onPressFacalty">
										</Image>
									</l:BlockLayoutCell>
								</l:BlockLayoutRow>
							</l:BlockLayout>
						</l:VerticalLayout>	
					</HBox>
					
					<HBox class="hb1-header" height="10%">
						<VBox>
							<Label text="@Copyright: Innovador IT Solution" class="footer-text" textAlign="Begin"></Label>
						</VBox>
					</HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>