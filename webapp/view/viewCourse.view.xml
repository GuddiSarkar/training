<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.viewCourse"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table" xmlns:cores="sap.ui.core.Item">
<App>
		<pages>
			<Page title="Training Management System" class="t">
				<content>
					<HBox height="100%" class="bg">
						<Panel  width="auto" height="93%" class="sapUiResponsiveMargin hd1 acr_pnl">
							<headerToolbar>
								<Toolbar>
									<Title text="View Course" textAlign="Center" />
									<SearchField width="30%" class="sapUiSmallMargin srch" search="onSearch" />
								</Toolbar>
							</headerToolbar>
							<content>

								<t:Table id="Table" class="acr_tbl"  visibleRowCount="10" inset="false" rows="{course>/tb_course}" selectionMode="MultiToggle">

				

									<t:columns>
										<t:Column
										id="cname"
										width="20%"
										sortProperty="Course Name"
										sorted="true"
										visible="true">
											<Label text="Course Name" />
											<t:template>
												<Button
												icon="sap-icon://sort"
												press="onSort"/>
												<Text text="{course>course_name}"/>
											</t:template>
										</t:Column>
										<t:Column
										id="ctype"
										width="20%"
										sortProperty="Course Type"
										sorted="true"
										visible="true">
											<Label text="Course Type"/>
											<t:template>
												<Button
												icon="sap-icon://sort"
												press="onSort"/>
												<Text text="{course>course_type}"/>
											</t:template>
										</t:Column>
										<t:Column
										id="cfee"
										width="20%"
										sortProperty="Course Fee"
										sorted="true"
										visible="true">
											<Label text="Course Fee" />
											<t:template>
												<Button
												icon="sap-icon://sort"
												press="onSort"/>
												<Text text="{course>course_fee}"/>
											</t:template>
										</t:Column>
										<t:Column
										id="cdrtn"
										width="20%"
										sortProperty="Course Duration"
										sorted="true"
										visible="true">
											<Label text="Course Duration" />
											<t:template>
												<Button
												icon="sap-icon://sort"
												press="onSort"/>
												<Text text="{course>course_duration}"/>
											</t:template>
										</t:Column>
										<t:Column
										id="action"
										width="20%">
											<Label text="Action"/>
											<t:template >
												<Toolbar class="acr_toolbar">
												<Button icon="sap-icon://edit" width="85px"   class="b3"/>
												<Button icon="sap-icon://delete" width="110px"  class="b4 btn2"/>
												</Toolbar>
											</t:template>
										</t:Column>
									</t:columns>
								</t:Table>
							</content>
						</Panel>
					</HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>