<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.paymentFacalty"
	xmlns:html="http://www.w3.org/1999/xhtml" displayBlock="true" xmlns:f="sap.ui.layout.form" 
	xmlns:l="sap.ui.layout" 
	xmlns:t="sap.ui.table" xmlns:cores="sap.ui.core.Item">
	<App>
		<pages>
			<Page title="Training Management System" class="t">
				<content>
					<HBox height="100%" class="bg">
						<Panel  width="auto" height="93%" class="sapUiResponsiveMargin hd1 acr_pnl">
							<headerToolbar>
								<Toolbar>
									<Title text="Facalty Payment" textAlign="Center" />
									<SearchField width="30%" class="sapUiSmallMargin srch2" search="onSearch" />
								</Toolbar>
							</headerToolbar>
							<content>
								<Table id="adCrsTable" items= "{course>/tb_faculty}" class="TableBorderTop" growing="true" 
								growingThreshold="2">
							
							<columns height="20px">	
								<Column width="8%"
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight cellBorderLeft">
									<Text text="ID"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Facalty Name"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Payment Type"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Cheque Number"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Name of Bank"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Payment Date"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Amount"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Action"/>
								</Column>
								
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="{course>faculty_id}" />
										<Text text="{course>faculty_name}" />
										<Text text="{course>faculty_mob}" />
										<Text text="{course>faculty_email}" />
										<Text text="{course>faculty_course}" />
										<Text text="{course>faculty_salary}" />
										<Text text="{course>faculty_doj}" />
										<Toolbar class="tbBorder">
											<Button icon="sap-icon://edit"  class="b3" press="onClickEdit" ariaLabelledBy="editButtonLabel"/>
											<Button icon="sap-icon://delete"  class="b4 btn2" press="onClickDelete" ariaLabelledBy="deleteButtonLabel"/>
										</Toolbar>
									</cells>
								</ColumnListItem>
							</items>	
						</Table>
							</content>
						</Panel>
					</HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>