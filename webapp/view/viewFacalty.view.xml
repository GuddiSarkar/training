<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.viewFacalty"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table" xmlns:cores="sap.ui.core.Item">
	<App>
		<pages>
			<Page title="Training Management System" class="t">
				<content>
					<HBox height="100%" class="bg">
						<Panel  width="auto" height="93%" class="sapUiResponsiveMargin hd1 acr_pnl">
							<headerToolbar>
								<Toolbar>
									<Title text="View Facalty" textAlign="Center" />
									<SearchField width="30%" class="sapUiSmallMargin srch8" search="onSearch" />
								</Toolbar>
							</headerToolbar>
							<content>
									<Table id="adCrsTable" items= "{course>/tb_faculty}" class="TableBorderTop" growing="true" 
								growingThreshold="1">
							
							<columns height="20px">	
								<Column width="8%"
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight cellBorderLeft">
									<Text text="ID"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Facalty Name"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Phone Number"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Email"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Course Name"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Salary"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Date of Joining"/>
								</Column>
								
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="{course>faculty_id}" />
										<Text text="{course>faculty_name}" />
										<Text text="{course>faculty_mob}" />
										<Text text="{course>faculty_email}" />
										<Text text="{course>faculty_course}" />
										<Text text="{course>faculty_salary}" />
										<Text text="{course>faculty_doj}" />
										
									</cells>
								</ColumnListItem>
							</items>	
						</Table>
							</content>
						</Panel>
					</HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>