<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.removeCourse"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table" xmlns:cores="sap.ui.core.Item">
<App>
		<pages>
			<Page title="Training Management System" showHeader="false">
				<content>
					<HBox class="t" height="7%">
						<VBox>
							<Button icon="sap-icon://arrow-left"  class="ib sapUiLargeMarginBottom" press="onPressBack" ariaLabelledBy="editButtonLabel"/>
							<!--<core:Icon src="sap-icon://arrow-left" color="black" press="onPressBack" class="sapUiLargeMarginEnd"/>-->
						</VBox>
						<VBox class="vb">
							<Label text="Training Management System" class="header-text1" textAlign="Center" ></Label>
						</VBox>
					</HBox>
					<HBox height="93%" class="bg">
						<Panel  width="auto" height="93%" class="sapUiResponsiveMargin hd1 acr_pnl">
							<headerToolbar>
								<Toolbar>
									<Title text="Remove Course" textAlign="Center" />
									<SearchField width="27%" class="sapUiSmallMargin srch" search="onSearch" />
								</Toolbar>
							</headerToolbar>
							<content>
								<Table id="Table" items= "{course>/tb_course}" class="TableBorderTop" growing="true" 
						 growingThreshold="3" inset="false">
							<columns height="20px">	
								<Column width="10%"
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight cellBorderLeft">
									<Text text="ID"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Course Name"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Course Type"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Course Fee"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Course Duration"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Action"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="{course>course_id}" />
						        		<Text text="{course>course_name}" />
										<Text text="{course>course_type}" />
										<Text text="{course>course_fee}" />
										<Text text="{course>course_duration}" />
										<Toolbar class="tbBorder">
											<Button icon="sap-icon://delete"  class="b4 btn2" press="onClickDelete"/>
										</Toolbar>
									</cells>
								</ColumnListItem>
							</items>	
						</Table>	
							</content>
						</Panel>
					</HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>