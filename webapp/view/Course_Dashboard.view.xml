<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.Course_Dashboard"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout">
	<App>
		<pages>
			<Page title="{i18n>title}" showHeader="false">
				<content>
					<HBox class="hb1-header" height="15%">
						<VBox class="vb1">
							<Label text="Training Management System" class="header-text" textAlign="Center"></Label>
						</VBox>
					</HBox>
					
					<HBox class="hb3" width="100%" height="75%">
						<l:VerticalLayout id="containerLayout" width="100%">
							<l:BlockLayout id="BlockLayout" background="{/selectedBackground}">
								<l:BlockLayoutRow>
									<l:BlockLayoutCell title="Add Course" titleAlignment="Center">
										<Image
											src="images/addcourse1.png"
											width="88%"
											height="87%"
											press="onPressAddCourse">
										</Image>
									</l:BlockLayoutCell>
									
									<l:BlockLayoutCell title=" Update Course" titleAlignment="Center">
										<Image
											src="images/editcourse.png"
											width="95%"
											height="96%"
											press="onPressUpdateCourse">
										</Image>
									</l:BlockLayoutCell>
									
									<l:BlockLayoutCell title="View Course" titleAlignment="Center">
										<Image
											src="images/searchcourse.png"
											width="88%"
											height="87%"
											press="onPressViewCourse">
										</Image>
									</l:BlockLayoutCell>
									
									<l:BlockLayoutCell title="Remove Course" titleAlignment="Center" >
										<Image
											src="images/deletecourse.png"
											width="90%"
											height="90%"
											press="onPressDeleteCourse">
										</Image>
									</l:BlockLayoutCell>
								</l:BlockLayoutRow>
							</l:BlockLayout>
						</l:VerticalLayout>	
					</HBox>
					
					<HBox class="hb1-header" height="10%">
						<VBox>
							<Label text="@Copyright: Innovador IT Solution" class="footer-text" textAlign="Begin"></Label>
						</VBox>
					</HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>