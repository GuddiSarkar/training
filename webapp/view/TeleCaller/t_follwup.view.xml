<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.t_follwup"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Training Management System" showHeader="false">
				<content>
					<HBox height="93%" class="bg">
						<Panel width="auto" height="93%" class="sapUiResponsiveMargin hd1 acr_pnl">
							<headerToolbar>
								<Toolbar class="pan">
									<Title text="Follow Up" textAlign="Center"/>
									<SearchField width="30%" class="sapUiSmallMargin srch20" search="onSearch"/>
								</Toolbar>
							</headerToolbar>
							<content>
								<Table id="adCrsTable" items="{course>/tb_lead}" class="TableBorderTop" growing="true" growingThreshold="1">
									<columns>
										<Column demandPopin="true" styleClass="cellBorderRight">
											<Text text="Name"/>
										</Column>
										<Column demandPopin="true" styleClass="cellBorderRight">
											<Text text="Mobile"/>
										</Column>
										<Column demandPopin="true" styleClass="cellBorderRight">
											<Text text="Gender"/>
										</Column>
										<Column demandPopin="true" styleClass="cellBorderRight">
											<Text text="Email"/>
										</Column>
										<Column demandPopin="true" styleClass="cellBorderRight">
											<Text text="Address"/>
										</Column>
										<Column demandPopin="true" styleClass="cellBorderRight">
											<Text text="Course"/>
										</Column>
										<Column demandPopin="true" styleClass="cellBorderRight">
											<Text text="Follow UP"/>
										</Column>
										<Column demandPopin="true" styleClass="cellBorderRight">
											<Text text="Date"/>
										</Column>
										<Column demandPopin="true" styleClass="cellBorderRight">
											<Text text="Remarks"/>
										</Column>
									</columns>
									<items>
										<ColumnListItem>
											<cells>
												<Text text="{course>lead_name}"/>
												<Text text="{course>lead_mobile}"/>
												<Text text="{course>lead_gender}"/>
												<Text text="{course>lead_email}"/>
												<Text text="{course>lead_address}"/>
												<Text text="{course>lead_course}"/>
												<core:Icon src="sap-icon://appointment" press="onAppointment"/>
												<Text text="{course>lead_date}"/>
												<core:Icon src="sap-icon://create" press="onAddRemarks"/>
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</content>
						</Panel>
					</HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>