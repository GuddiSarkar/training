<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.t_follwup"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Training Management System" showHeader="false">
				<content>
					<HBox height="93%" class="bg">
						<Panel width="auto" height="93%" class="sapUiResponsiveMargin hd1 acr_pnl">
							<headerToolbar>
								<Toolbar class="pan">
									<Title text="Follow Up" textAlign="Center"/>
									<SearchField width="30%" class="sapUiSmallMargin srch" search="onSearch"/>
								</Toolbar>
							</headerToolbar>
							<content>
								<Table id="adCrsTable" items="{course>/}" class="TableBorderTop" growing="true" growingThreshold="1">
									<columns>
										<Column demandPopin="true" styleClass="cellBorderRight">
											<Text text="Name"/>
										</Column>
										<Column demandPopin="true" styleClass="cellBorderRight">
											<Text text="Mobile"/>
										</Column>
										<Column demandPopin="true" styleClass="cellBorderRight">
											<Text text="Gender"/>
										</Column>
										<Column demandPopin="true" styleClass="cellBorderRight">
											<Text text="Email"/>
										</Column>
										<Column demandPopin="true" styleClass="cellBorderRight">
											<Text text="Address"/>
										</Column>
										<Column demandPopin="true" styleClass="cellBorderRight">
											<Text text="Course"/>
										</Column>
										<Column demandPopin="true" styleClass="cellBorderRight">
											<Text text="Follow UP"/>
										</Column>
										<Column demandPopin="true" styleClass="cellBorderRight">
											<Text text="Remarks"/>
										</Column>
										<Column demandPopin="true" styleClass="cellBorderRight">
											<Text text="Action"/>
										</Column>
									</columns>
									<items>
										<ColumnListItem>
											<cells>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Toolbar class="tbBorder">
													<Button icon="sap-icon://edit" class="b3" press="onClickEdit" ariaLabelledBy="editButtonLabel"/>
													<Button icon="sap-icon://delete" class="b4 btn2" press="onClickDelete" ariaLabelledBy="deleteButtonLabel"/>
												</Toolbar>
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</content>
						</Panel>
					</HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>