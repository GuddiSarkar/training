<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.addFacalty"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table" xmlns:cores="sap.ui.core.Item" displayBlock="true"
	xmlns:l="sap.ui.layout">
		<App>
		<pages>
			<Page title="Training Management System" class="t">
				<content>
				<Panel width="auto" class="sapUiResponsiveMargin hd1 acr_pnl">
					<headerToolbar>
						<Toolbar height="3rem">
							<Title text="Add Facalty"/>
						</Toolbar>
					</headerToolbar>
					<content>
						<l:VerticalLayout id="containerLayout2" width="100%">
								<HBox>
								<VBox class="acr_vb2">
									<HBox>
										<Label text="Facalty Name" width="200px"/>
										<Input value="" class="acr_inp" id="fac_name"/>
									</HBox>
									
									<HBox>
										<Label text="Phone Number" width="200px"/>
										<Input value="" class="acr_inp" id="phn_num"/>
									</HBox>
									
									<HBox>
										<Label text="Salary" width="200px"/>
										<Input value="" class="acr_inp" id="s_lary"/>
									</HBox>
									
								</VBox>
								
								<VBox class="acr_vb22">
									<HBox>
										<Label text="Email" width="200px"/>
										<Input value="" class="acr_inp" id="e_mil"/>
									</HBox>
									
									<HBox>
										<Label text="Course Name" width="200px"/>
										<Input value="" class="acr_inp" id="crs_name"/>
									</HBox>
									
									<HBox>
										<Label text="Date of Joining" width="200px"/>
										<Input value="" type="Date" class="acr_inp" id="d_oj"/>
									</HBox>
							
								</VBox>
							</HBox>
			</l:VerticalLayout>
			<Toolbar class="acr_tiny_margin" width="0px"></Toolbar>
					<HBox class="btn1">
						<Button text="Add" width="100px" class="b1" press="addFacalty"/>
					</HBox>
		</content>
	</Panel>
	<Panel width="auto" class="sapUiResponsiveMargin hd2 acr_pnl">
		<headerToolbar>
			<Toolbar height="3rem">
				<Title text="Facalty"/>
				<SearchField width="30%" class="sapUiSmallMargin srch7" search="onSearch" />
			</Toolbar>
		</headerToolbar>
		<content >
		
		<t:Table id="idTable" class="acr_tbl"  visibleRowCount="2" inset="false" rows="{faculty>/tb_faculty}" selectionMode="MultiToggle">
				<t:columns>
					<t:Column
						id="id"
						width="10%"
						sortProperty="Id"
						sorted="true"
						visible="true"
						>
					
						<Label text="SL. NO." />
				
						<t:template>
							<Button
							icon="sap-icon://sort"
							press="onSort"/>
							<Text text="{faculty>faculty_id}"/>
						</t:template>
					</t:Column>
					<t:Column
						id="name"
						width="20%"
						sortProperty="Facalty Name"
						sorted="true"
						visible="true"
						>
					
						<Label text="Facalty Name" />
				
						<t:template>
							<Button
							icon="sap-icon://sort"
							press="onSort"/>
							<Text text="{faculty>faculty_name}"/>
						</t:template>
					</t:Column>
					<t:Column
						id="role"
						width="20%"
						sortProperty="Phone Number"
						sorted="true"
						visible="true"
						>
					
						<Label text="Phone Number" />
				
						<t:template>
							<Button
							icon="sap-icon://sort"
							press="onSort"/>
							<Text text="{faculty>faculty_mob}"/>
						</t:template>
					</t:Column>
					<t:Column
						id="e_name"
						width="20%"
						sortProperty="Email"
						sorted="true"
						visible="true"
						>
						
						<Label text="Email" />
					
						<t:template>
							<Button
							icon="sap-icon://sort"
							press="onSortQuantity"/>
							<Text text="{faculty>faculty_email}"/>
						</t:template>
					</t:Column>
					<t:Column
						id="cname"
						width="20%"
						sortProperty="Course Name"
						sorted="true"
						visible="true"
						>
						
						<Label text="Course Name" />
					
						<t:template>
							<Button
							icon="sap-icon://sort"
							press="onSortId"/>
							<Label text="{faculty>faculty_course}"/>
						</t:template>
					</t:Column>
					<t:Column
						id="slry"
						width="20%"
						sortProperty="Salary"
						sorted="true"
						visible="true"
						>
						
						<Label text="Salary" />
					
						<t:template>
							<Button
							icon="sap-icon://sort"
							press="onSortId"/>
							<Label text="{faculty>faculty_salary}"/>
						</t:template>
					</t:Column>
					<t:Column
						id="doj"
						width="20%"
						sortProperty="Date of Joining"
						sorted="true"
						visible="true"
						>
						
						<Label text="Date of Joining" />
					
						<t:template>
							<Button
							icon="sap-icon://sort"
							press="onSortId"/>
							<Label text="{faculty>faculty_doj}"/>
						</t:template>
					</t:Column>
					<t:Column
						id="action"
						width="20%"
						>
						<Label text="Action" />
						<t:template >
							<Toolbar class="acr_toolbar">
								<Button icon="sap-icon://edit" width="85px" class="b3" press="onClickEdit"/>
								<Button icon="sap-icon://delete" width="110px" class="b4 btn2" press="onClickDelete"/>
							</Toolbar>
						</t:template>
					</t:Column>
				</t:columns>
							
						</t:Table>
					</content>
				</Panel>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>