<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.login"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<App>
		<pages>
			<Page title="{i18n>title}" showHeader="false">
				<content>
					<HBox class="hb1-header" height="15%">
						<VBox class="vb1">
							<Label text="Training Management System" class="header-text" textAlign="Center"></Label>
						</VBox>
						<VBox class="link">
							<HBox>
								<!--<VBox>
									<Link text="Admin" id="admin" emphasized="true" press="handleLinkPressAdmin" class="linkText"/>
								</VBox>-->
								<VBox class="icon">
									<core:Icon src="sap-icon://sys-help-2"></core:Icon>
								</VBox>
								<VBox>
									<Link text="Complain" id="link" emphasized="true" press="handleLinkPress" class="linkText"/>
								</VBox>
							</HBox>
						</VBox>
					</HBox>
					<HBox class="hb2" width="100%" height="75%">
						<VBox class="vb2">
							<f:SimpleForm id="SimpleFormDisplay354" minWidth="1024" maxContainerCols="2" editable="false" layout="ResponsiveGridLayout" labelSpanL="3"
								labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1" backgroundDesign="Transparent">
								<f:content backgroundDesign="Transparent">
									<core:Icon src="sap-icon://log" color="#031E48" class="sapUiMediumMarginBottom"/>
									<Input id="username" class="sapUiSmallMarginBottom" type="Text" placeholder="Enter Username"
										valueStateText="Name must not be empty. Maximum 5 characters."
										value="{ path : '/username', type : 'sap.ui.model.type.String', constraints : { minLength: 3, maxLength: 20 } }"/>
									<Input id="password" class="sapUiSmallMarginBottom" type="Password" placeholder="Enter Password" valueStateText="Password must not be empty"
										value="{ path : '/password', type : 'sap.ui.model.type.String', constraints : { minLength: 3, maxLength: 20 } }"/>
									<Button text="Log In" type="Emphasized" press="onPress" class="sapUiSmallMarginEnd login" width="30%"/>
								</f:content>
							</f:SimpleForm>
						</VBox>
					</HBox>
					<HBox class="hb1-header" height="10%">
						<VBox>
							<Label text="@Copyright: Innovador IT Solution" class="footer-text" textAlign="Begin"></Label>
						</VBox>
					</HBox>
				</content>
			</Page>
		</pages>
	</App></mvc:View>