<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.addStudent"
xmlns:html="http://www.w3.org/1999/xhtml" displayBlock="true" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<App>
		<pages>
			<Page title="Training Management System" class="t">
				<content>
					<HBox height="100%" class="bg">
						<Panel  width="auto" height="93%" class="sapUiResponsiveMargin">
						<headerToolbar>
							<Toolbar>
								<Title text="Add Student" textAlign="Center" />
							</Toolbar>
						</headerToolbar>
						<content>
						<IconTabBar id ="icontabbar" class="sapUiResponsiveContentPadding" >
						<items>
							<IconTabFilter text="Personal Detailes"  key="db">
						<ScrollContainer
						height="100%"
						width="100%"
						horizontal="false"
						vertical="true">
							<l:VerticalLayout id="containerLayout" width="100%">
								
								<HBox>
									<VBox>	
										<HBox>
											<Label text="First Name" width="200px" class="asi"/>
											<Input value="" id="f_name" />
										</HBox>
										<HBox>
											<Label text="Gender" width="200px" />
											<RadioButtonGroup columns="2" width="200px" class="sapUiMediumMarginBottom" id="g_nder" >
												<buttons>
													<RadioButton id="RB1-1" text="Male"/>
													<RadioButton id="RB1-2" text="Female"/>
												</buttons>
											</RadioButtonGroup>
										</HBox>
									</VBox>
									<VBox class="vb21">
										<HBox>									
											<Label text="Last Name" width="200px" />
											<Input value="" id="l_name"/>
										</HBox>
										<HBox>
											<Label text="D.O.B" width="200px"/>
											<Input value="" type ="Date" id="d_ob" />
										</HBox>
									</VBox>
								</HBox>
								
							</l:VerticalLayout>
							
							<Toolbar class="sapUiTinyMargin"></Toolbar>
	    				
	    					<l:VerticalLayout id="containerLayout1" width="100%" >
								<HBox>	
									<VBox>
										<HBox>
											<Label text="Phone" width="200px"/>
											<Input value="" type="Tel" id="p_hone"/>
										</HBox>
									</VBox>
									<VBox class="vb21">
										<HBox>
											<Label text="Email" width="200px"/>
											<Input value="" type="Email" id="e_ml"/>
										</HBox>
									</VBox>
								</HBox>
							</l:VerticalLayout>
							
							<Toolbar class="sapUiTinyMargin"></Toolbar>
							
	    					<l:VerticalLayout id="containerLayout2" width="100%" >
								<HBox>
									<VBox>
										<HBox>
											<Label text="Address Street 1" width="200px"/>
											<Input value="" id="a_strt1"/>
										</HBox>
										<HBox>
											<Label text="City" width="200px"/>
											<Input value="" id="c_ty" />
										</HBox>
										<HBox>
											<Label text="Zip/Postal Code" width="200px"/>
											<Input value="" id="zip_code"/>
										</HBox>
									</VBox>
								
									<VBox class="vb21">
										<HBox>
											<Label text="Address Street 2" width="200px" />
											<Input value="" type="Tel" id="a_strt2"/>
										</HBox>
										<HBox>
											<Label text="State/Province" width="200px"/>
											<Input value="" id="s_tate" />
										</HBox>
										<HBox>
											<Label text="Country" width="200px"/>
											<Select width="195px" class="sel" id="c_untry">
												<items class="itm">
													<core:Item text="--Select--"/>
													<core:Item text="Germany" />
													<core:Item text="USA" />
													<core:Item text="England" />
												</items>
											</Select>
										</HBox>
									</VBox>
								</HBox>
								<HBox class="btn0">
										<Button  text="Next"  width="100px" class="b1"></Button>
								</HBox>
							</l:VerticalLayout>
							</ScrollContainer>
							</IconTabFilter>
							
							<IconTabFilter text="Addmission Detailes">
							<l:VerticalLayout id="containerLayout6" width="100%" >
								<HBox>
									<VBox>
										<HBox>
											<Label text="Course Name" width="200px"/>
											<ComboBox width="195px" class="sel" id="c_name"
												items="{
													path: 'course>/tb_course',
													sorter: { path: 'course_name' }
												}" selectionChange="onSelectionchange">
												<core:Item key="{course>course_id}" text="{course>course_name}" />
											</ComboBox>
										</HBox>
										
										<HBox>
											<Label text="Couse Fee" width="200px"/>
											<Input value="{course>course_name}" id="c_fee" />
										</HBox>
									</VBox>
								
									<VBox class="vb21">
										<HBox>
											<Label text="Course Type" width="200px"/>
											<Input value="" id="c_type"/>
										</HBox>
										<HBox>
											<Label text="Start Date" width="200px"/>
											<Input value="" type ="Date" id="s_date"/>
										</HBox>
									</VBox>
								</HBox>
								<HBox class="btn12">
									<Button  text="Previous"  width="100px" class="b2"></Button>
									<Button  text="Next"	width="130px" class="b1 btn2"></Button>
								</HBox>
							</l:VerticalLayout>
			</IconTabFilter>
		
	
			<IconTabFilter text="Fee Detailes">
				<l:VerticalLayout id="containerLayout7" width="100%" >
								<HBox>
									<VBox>
										<HBox>
											<Label text="Course Fee" width="200px"/>
											<Input value="" id="c_fee1"/>
										</HBox>
										
										<HBox>
											<Label text="Tax" width="200px"/>
											<Input value="14.5%" editable="false" id="t_ax"/>
										</HBox>
										<HBox>
											<Label text="Registration Fee" width="200px"/>
											<Input value="1000/-" editable="false" id="r_fee"/>
										</HBox>
										<HBox>
											<Label text="2nd Installment" width="200px"/>
											<Input value="" id="sec_instl"/>
										</HBox>
									</VBox>
									<VBox class="vb21">
										<HBox>
											<Label text="Discount" width="200px"/>
											<Input value="" id="d_scunt"/>
										</HBox>
										<HBox>
											<Label text="Total Payable Amount" width="200px"/>
											<Input value="" id="tp_amnt"/>
										</HBox>
										<HBox>
											<Label text="1st Installment" width="200px"/>
											<Input value="" id="f_instl"/>
										</HBox>
										
										<HBox>
											<Label text="3rd Installment" width="200px"/>
											<Input value="" id="thrd_instl"/>
										</HBox>
									</VBox>
								</HBox>
								<HBox class="btn12">
									<Button  text="Previous"  width="100px" class="b2"></Button>
									<Button  text="Save"  width="130px" class="b1 btn2" press="addStudent"></Button>
								</HBox>
							</l:VerticalLayout>
						</IconTabFilter>
					</items>
				</IconTabBar>
				</content>
				</Panel>
					</HBox>
					
					
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>