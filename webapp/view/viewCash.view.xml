<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.viewCash"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table" xmlns:cores="sap.ui.core.Item">
	<App>
		<pages>
			<Page title="Training Management System" class="t">
				<content>
					<HBox height="100%" class="bg">
						<Panel  width="auto" height="93%" class="sapUiResponsiveMargin hd1 acr_pnl">
							<headerToolbar>
								<Toolbar>
									<Title text="View Cash" textAlign="Center" />
									<SearchField width="30%" class="sapUiSmallMargin srch6" search="onSearch" />
								</Toolbar>
							</headerToolbar>
							<content>
								<Table id="adCrsTable" items= "{course>/tb_course}" class="TableBorderTop" growing="true" 
								growingThreshold="2">
							
							<columns height="20px">	
								<Column width="8%"
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight cellBorderLeft">
									<Text text="ID"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Student Name"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Course Name"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Transaction Type"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="cheque Number"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Discount"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Amount"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Registration Fee"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Tax"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="1st Installment"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="2nd Installment"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="3rd Installment"/>
								</Column>
								
							
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="{course>course_id}" />
						        		<Text text="{course>course_name}" />
										<Text text="{course>course_type}" />
										<Text text="{course>course_fee}" />
										<Text text="{course>course_duration}" />
										<Text text="{course>course_duration}" />
										<Text text="{course>course_duration}" />
										<Text text="{course>course_duration}" />
	
									</cells>
								</ColumnListItem>
							</items>	
						</Table>	
							</content>
						</Panel>
					</HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>