<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.Reminder_Dashboard"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout">
	<App>
		<pages>
			<Page title="{i18n>title}" showHeader="false">
				<content>
					<HBox class="hb1-header" height="15%">
						<VBox class="vb1">
							<Label text="Training Management System" class="header-text" textAlign="Center"></Label>
						</VBox>
					</HBox>
					
					<HBox class="hb3" width="100%" height="75%">
						<l:VerticalLayout id="containerLayout" width="100%">
							<l:BlockLayout id="BlockLayout" background="{/selectedBackground}">
								<l:BlockLayoutRow>
									<l:BlockLayoutCell title="Add Reminder" titleAlignment="Center">
										<Image
											src="images/addreminder.ico"
											width="88%"
											height="87%"
											press="onPressAddReminder">
											<tooltip></tooltip><!-- sap.ui.core.TooltipBase -->
											<customData></customData><!-- sap.ui.core.CustomData -->
											<layoutData></layoutData><!-- sap.ui.core.LayoutData -->
											<dependents></dependents><!-- sap.ui.core.Control -->
											<detailBox></detailBox><!-- sap.m.LightBox -->
										</Image>
									</l:BlockLayoutCell>
									
									<l:BlockLayoutCell title="Update Reminder" titleAlignment="Center">
										<Image
											src="images/calendar-edit-1.png"
											width="88%"
											height="87%"
											class="ur"
											press="onPressUpdateReminder">
											<tooltip></tooltip><!-- sap.ui.core.TooltipBase -->
											<customData></customData><!-- sap.ui.core.CustomData -->
											<layoutData></layoutData><!-- sap.ui.core.LayoutData -->
											<dependents></dependents><!-- sap.ui.core.Control -->
											<detailBox></detailBox><!-- sap.m.LightBox -->
										</Image>
									</l:BlockLayoutCell>
									
									<l:BlockLayoutCell title="View Reminder" titleAlignment="Center">
										<Image
											src="images/viewevent.ico"
											width="95%"
											height="96%"
											press="onPressViewReminder">
											<tooltip></tooltip><!-- sap.ui.core.TooltipBase -->
											<customData></customData><!-- sap.ui.core.CustomData -->
											<layoutData></layoutData><!-- sap.ui.core.LayoutData -->
											<dependents></dependents><!-- sap.ui.core.Control -->
											<detailBox></detailBox><!-- sap.m.LightBox -->
										</Image>
									</l:BlockLayoutCell>
									
									<l:BlockLayoutCell title="Delete Reminder" titleAlignment="Center" >
										<Image
											src="images/remove_icon.png"
											width="90%"
											height="90%"
											press="onPressDeleteReminder">
											<tooltip></tooltip><!-- sap.ui.core.TooltipBase -->
											<customData></customData><!-- sap.ui.core.CustomData -->
											<layoutData></layoutData><!-- sap.ui.core.LayoutData -->
											<dependents></dependents><!-- sap.ui.core.Control -->
											<detailBox></detailBox><!-- sap.m.LightBox -->
										</Image>
									</l:BlockLayoutCell>
								</l:BlockLayoutRow>
							</l:BlockLayout>
						</l:VerticalLayout>	
					</HBox>
					
					<HBox class="hb1-header" height="10%">
						<VBox>
							<Label text="@Copyright: Innovador IT Solution" class="footer-text" textAlign="Begin"></Label>
						</VBox>
					</HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>