<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" displayBlock="true" xmlns:l="sap.ui.layout">
	<Dialog id="approveFragment" title="Edit Facalty">
		<content>
			<l:VerticalLayout class="sapUiContentPadding" width="100%">
				<HBox>
					<Input value="" class="acr_inp" id="id" visible="false"/>
					<VBox class="acr_vb2">
						<HBox>
							<Label text="Employee Name" width="100px"/>
							<Input value="" class="acr_inp" id="name"/>
						</HBox>
						<HBox>
							<Label text="Set Username" width="100px"/>
							<Input value="" class="acr_inp" id="uname"/>
						</HBox>
					</VBox>
					<VBox class="acr_vb22">
						<HBox>
							<Label text="Employee Role" width="100px"/>
							<Input value="" class="acr_inp" id="role"/>
						</HBox>
						<HBox>
							<Label text="Set Password" width="100px"/>
							<Input value="" class="acr_inp" id="pwd"/>
						</HBox>
					</VBox>
				</HBox>
			</l:VerticalLayout >
		</content>
		<beginButton>
			<Button text="Save" press="onClickSave"/>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>