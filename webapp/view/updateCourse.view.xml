<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.updateCourse"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table" xmlns:cores="sap.ui.core.Item">
	<App>
		<pages>
			<Page title="Training Management System" class="t">
				<content>
					<HBox height="100%" class="bg">
						<Panel  width="auto" height="93%" class="sapUiResponsiveMargin hd1 acr_pnl">
							<headerToolbar>
								<Toolbar>
									<Title text="Update Course" textAlign="Center" />
									<SearchField width="30%" class="sapUiSmallMargin srch4" search="onSearch" />
								</Toolbar>
							</headerToolbar>
							<content>
						<Table id="Table" items= "{course>/tb_course}" class="TableBorderTop" growing="true" 
						 growingThreshold="3" inset="false">
							<columns height="20px">	
								<Column width="10%"
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight cellBorderLeft">
									<Text text="ID"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Course Name"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Course Type"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Course Fee"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Course Duration"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Action"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="{course>course_id}" />
						        		<Text text="{course>course_name}" />
										<Text text="{course>course_type}" />
										<Text text="{course>course_fee}" />
										<Text text="{course>course_duration}" />
										<Toolbar class="tbBorder">
											<Button icon="sap-icon://edit"  class="b3" press="onClickEdit"/>
											
										</Toolbar>
									</cells>
								</ColumnListItem>
							</items>	
						</Table>	
					</content>
						</Panel>
					</HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>