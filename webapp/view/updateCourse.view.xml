<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.updateCourse"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:t="sap.ui.table" xmlns:cores="sap.ui.core.Item">
	<App>
		<pages>
			<Page title="Training Management System" class="t">
				<content>
					<HBox height="100%" class="bg">
						<Panel  width="auto" height="93%" class="sapUiResponsiveMargin hd1 acr_pnl">
							<headerToolbar>
								<Toolbar>
									<Title text="Update Course" textAlign="Center" />
									<SearchField width="30%" class="sapUiSmallMargin srch4" search="onSearch" />
								</Toolbar>
							</headerToolbar>
							<content>
								<t:Table id="idTable" class="acr_tbl"  visibleRowCount="1" inset="false" rows="{det>/Employee}" selectionMode="MultiToggle"  >
									<t:columns>
										<t:Column
						id="id"
						width="10%"
						sortProperty="Id"
						sorted="true"
						visible="true"
						>
					
						<Label text="SL. NO." />
				
						<t:template>
							<Button
							icon="sap-icon://sort"
							press="onSort"/>
							<Text text="{course>course_id}"/>
						</t:template>
					</t:Column>
										<t:Column
										id="cname"
										width="20%"
										sortProperty="Course Name"
										sorted="true"
										visible="true">
											<Label text="Course Name" />
											<t:template>
												<Button
												icon="sap-icon://sort"
												press="onSort"/>
												<Text text="{det>Username}"/>
											</t:template>
										</t:Column>
										<t:Column
										id="ctype"
										width="20%"
										sortProperty="Course Type"
										sorted="true"
										visible="true">
											<Label text="Course Type"/>
											<t:template>
												<Button
												icon="sap-icon://sort"
												press="onSort"/>
												<Text text="{det>UserRole}"/>
											</t:template>
										</t:Column>
										<t:Column
										id="cfee"
										width="20%"
										sortProperty="Course Fee"
										sorted="true"
										visible="true">
											<Label text="Course Fee" />
											<t:template>
												<Button
												icon="sap-icon://sort"
												press="onSort"/>
												<Text text="{det>UserRole}"/>
											</t:template>
										</t:Column>
										<t:Column
										id="cdrtn"
										width="20%"
										sortProperty="Course Duration"
										sorted="true"
										visible="true">
											<Label text="Course Duration" />
											<t:template>
												<Button
												icon="sap-icon://sort"
												press="onSort"/>
												<Text text="{det>UserRole}"/>
											</t:template>
										</t:Column>
										<t:Column
										id="action"
										width="20%">
											<Label text="Action" />
											<t:template >
												<Button icon="sap-icon://edit" width="85px"   class="b3"/>
											</t:template>
										</t:Column>
									</t:columns>
								</t:Table>
							</content>
						</Panel>
					</HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>