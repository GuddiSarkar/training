<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.addCourse"
	xmlns:html="http://www.w3.org/1999/xhtml" displayBlock="true" xmlns:l="sap.ui.layout" 
	xmlns:t="sap.ui.table" xmlns:cores="sap.ui.core.Item">
	<App>
		<pages>
			<Page title="Training Management System" class="t">
				<content>
				<Panel width="auto" class="sapUiResponsiveMargin hd1 acr_pnl">
					<headerToolbar>
						<Toolbar height="3rem">
							<Title text="Add Courses"/>
						</Toolbar>
					</headerToolbar>
					<content>
						<l:VerticalLayout id="containerLayout2" width="100%">
							<HBox>
								<VBox class="acr_vb2">
									<HBox>
										<Label text="Course Name" width="200px"/>
										<Input value="" class="acr_inp" id="c_name"/>
									</HBox>
									
									<HBox>
										<Label text="Course Fee" width="200px"/>
										<Input value="" class="acr_inp" id="c_fee"/>
									</HBox>
									
								</VBox>
								
								<VBox class="acr_vb22">
									<HBox>
										<Label text="Course Type" width="200px"/>
										<Select width="195px" class="sel" id="c_type" selectedKey="{course>course_type}">
											<items class="itm">
												<core:Item text="--Select--" key="0"/>
												<core:Item text="Technical" key="1"/>
												<core:Item text="Functional" key="2"/>
											</items>
										</Select>
									</HBox>
									
									
									<HBox>
										<Label text="Course Duration" width="200px"/>
										<Select width="195px" class="sel" id="c_dur" selectedKey="{course>course_duration}">
											<items class="itm">
												<core:Item text="--Select--" key="0"/>
												<core:Item text="1 Month" key="1"/>
												<core:Item text="2 Month" key="2"/>
												<core:Item text="3 Month" key="3"/>
											</items>
										</Select>
									</HBox>
								</VBox>
							</HBox>
						</l:VerticalLayout>
						<Toolbar class="acr_tiny_margin" width="0px"></Toolbar>
						<HBox class="btn1">
							<Button text="Add" width="100px" class="b1" press="addCourse"/>
						</HBox>
					</content>
				</Panel>	
				<Panel width="auto" class="sapUiResponsiveMargin hd2 acr_pnl">
					<headerToolbar>
						<Toolbar height="3rem">
							<Title text="Courses"/>
							<SearchField width="30%" class="sapUiSmallMargin srch3" search="onSearch" />
						</Toolbar>
					</headerToolbar>
					<content>
						<Table id="Table" items= "{course>/tb_course}" class="TableBorderTop" growing="true" 
						 growingThreshold="2" inset="false">
							<columns height="20px">	
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight cellBorderLeft">
									<Text text="ID"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Course Name"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Course Type"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Course Fee"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Course Duration"/>
								</Column>
								<Column
									minScreenWidth="Tablet"
									demandPopin="true" styleClass="cellBorderRight">
									<Text text="Action"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="{course>course_id}" />
						        		<Text text="{course>course_name}" />
										<Text text="{course>course_type}" />
										<Text text="{course>course_fee}" />
										<Text text="{course>course_duration}" />
										<Toolbar class="tbBorder">
											<Button icon="sap-icon://edit"  class="b3" press="onClickEdit"/>
											<Button icon="sap-icon://delete"  class="b4 btn2" press="onClickDelete"/>
										</Toolbar>
									</cells>
								</ColumnListItem>
							</items>	
						</Table>	
					</content>
				</Panel>
			</content>
		</Page>
	</pages>
	</App>
</mvc:View>