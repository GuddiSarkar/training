<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.addCourse"
	xmlns:html="http://www.w3.org/1999/xhtml" displayBlock="true" xmlns:l="sap.ui.layout" 
	xmlns:t="sap.ui.table" xmlns:cores="sap.ui.core.Item">
	<App>
		<pages>
			<Page title="Training Management System" class="t">
				<content>
				<Panel width="auto" class="sapUiResponsiveMargin hd1 acr_pnl">
					<headerToolbar>
						<Toolbar height="3rem">
							<Title text="Add Courses"/>
						</Toolbar>
					</headerToolbar>
					<content>
						<l:VerticalLayout id="containerLayout2" width="100%">
								<HBox>
								<VBox class="acr_vb2">
									<HBox>
										<Label text="Course Name" width="200px"/>
										<Input value="" class="acr_inp" id="c_name"/>
									</HBox>
									
									<HBox>
										<Label text="Course Fee" width="200px"/>
										<Input value="" class="acr_inp" id="c_fee"/>
									</HBox>
									
								</VBox>
								
								<VBox class="acr_vb22">
									<HBox>
										<Label text="Course Type" width="200px"/>
										<Input value="" class="acr_inp" id="c_type"/>
									</HBox>
									
									
								<HBox>
										<Label text="Course Duration" width="200px"/>
											<Select width="195px" class="sel" id="c_dur" selectedKey="--Select--">
												<items class="itm">
													<core:Item text="--Select--"/>
													<core:Item text="1 Month" />
													<core:Item text="2 Month" />
													<core:Item text="3 Month" />
												</items>
											</Select>
										</HBox>
								</VBox>
							</HBox>
			</l:VerticalLayout>
			<Toolbar class="acr_tiny_margin" width="0px"></Toolbar>
					<HBox class="btn1">
						<Button text="Add" width="100px" class="b1" press="addCourse"/>
					</HBox>
		</content>
	</Panel>
	<Panel width="auto" class="sapUiResponsiveMargin hd2 acr_pnl">
		<headerToolbar>
			<Toolbar height="3rem">
				<Title text="Courses"/>
				<SearchField width="30%" class="sapUiSmallMargin srch3" search="onSearch" />
			</Toolbar>
		</headerToolbar>
		<content >
		
		<t:Table id="idTable" class="acr_tbl"  visibleRowCount="1" inset="false" rows="{det>/Employee}" selectionMode="MultiToggle"  >
				<t:columns>
					<t:Column
						id="name"
						width="20%"
						sortProperty="Course Name"
						sorted="true"
						visible="true"
						>
					
						<Label text="Course Name" />
				
						<t:template>
							<Button
							icon="sap-icon://sort"
							press="onSort"/>
							<Text text="{det>Username}"/>
						</t:template>
					</t:Column>
					<t:Column
						id="role"
						width="20%"
						sortProperty="Course Type"
						sorted="true"
						visible="true"
						>
					
						<Label text="Course Type" />
				
						<t:template>
							<Button
							icon="sap-icon://sort"
							press="onSort"/>
							<Text text="{det>UserRole}"/>
						</t:template>
					</t:Column>
					<t:Column
						id="e_name"
						width="20%"
						sortProperty="Course Fee"
						sorted="true"
						visible="true"
						>
						
						<Label text="Course Fee" />
					
						<t:template>
							<Button
							icon="sap-icon://sort"
							press="onSortQuantity"/>
							<Text text="{det>EmployeeName}"/>
						</t:template>
					</t:Column>
					<t:Column
						id="productid"
						width="20%"
						sortProperty="Course Duration"
						sorted="true"
						visible="true"
						>
						
						<Label text="Course Duration" />
					
						<t:template>
							<Button
							icon="sap-icon://sort"
							press="onSortId"/>
							<Label text="{det>Status}"/>
						</t:template>
					</t:Column>
					<t:Column
						id="action"
						width="20%"
						>
						<Label text="Action" />
						<t:template >
							<Toolbar class="acr_toolbar" width="0px">
							<Button icon="sap-icon://edit" width="85px"   class="b3"/>
							<Button icon="sap-icon://delete" width="110px"  class="b4 btn2"/>
							</Toolbar>
						</t:template>
					</t:Column>
				</t:columns>
							
						</t:Table>
					</content>
				</Panel>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>