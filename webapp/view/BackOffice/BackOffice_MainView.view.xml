<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.BackOffice_MainView"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:html="http://www.w3.org/1999/xhtml">
	<SplitApp id="split" initialDetail="stu" initialMaster="master2" backgroundColor="White">
		<detailPages>
			<Page id="stu" title="Add Student" class="sapUiStdPage">
				<content>
					<mvc:XMLView viewName="com.demoTMS.view.BackOffice.addStudent" />
				</content>
			</Page>
			<Page id="stu1" title="View Student" class="sapUiStdPage" showNavButton="false" navButtonText="Back"
				navButtonPress="onPressDetailBack">
				<content>
					<mvc:XMLView viewName="com.demoTMS.view.BackOffice.viewStudent" />
				</content>
			</Page>
			<Page id="course1" title="Add Course" class="sapMPage" showNavButton="false" navButtonText="Back" navButtonPress="onPressDetailBack" enableScrolling="true">
				<content>
					<mvc:XMLView viewName="com.demoTMS.view.BackOffice.addCourse" />
				</content>
			</Page>
			<Page id="course2" title="View Course" class="sapMPage" showNavButton="false" navButtonText="Back" navButtonPress="onPressDetailBack" enableScrolling="true">
				<content>
					<mvc:XMLView viewName="com.demoTMS.view.BackOffice.viewCourse" />
				</content>
			</Page>
			<Page id="fac1" title="Add BackOffice" class="sapMPage" showNavButton="false" navButtonText="Back" navButtonPress="onPressDetailBack" enableScrolling="true">
				<content>
					<mvc:XMLView viewName="com.demoTMS.view.BackOffice.addFacalty" />
				</content>
			</Page>
			
			<Page id="fac2" title="Payment BackOffice" class="sapMPage" showNavButton="false" navButtonText="Back" navButtonPress="onPressDetailBack" enableScrolling="true">
				<content>
					<mvc:XMLView viewName="com.demoTMS.view.BackOffice.paymentFacalty" />
				</content>
			</Page>
			<Page id="add1" title="Add Reminder" class="sapMPage" showNavButton="false" navButtonText="Back" navButtonPress="onPressDetailBack" enableScrolling="true">
				<content>
					<mvc:XMLView viewName="com.demoTMS.view.BackOffice.addReminder" />
				</content>
			</Page>
			<Page id="view1" title="View by Date" class="sapMPage" showNavButton="false" navButtonText="Back" navButtonPress="onPressDetailBack" enableScrolling="true">
				<content>
					<mvc:XMLView viewName="com.demoTMS.view.BackOffice.view_by_date" />
				</content>
			</Page>
			<Page id="view2" title="View by Title" class="sapMPage" showNavButton="false" navButtonText="Back" navButtonPress="onPressDetailBack" enableScrolling="true">
				<content>
					<mvc:XMLView viewName="com.demoTMS.view.BackOffice.view_by_title" />
				</content>
			</Page>
		</detailPages>
		<masterPages>
			<Page id="master2" showHeader="true" title="BackOffice" class="sapUiStdPage" showNavButton="false" navButtonPress="onPressMasterBack">
				<content>
					<Tree id="Tree" items="{path: 'fac>/'}" selectionChange="onListItemPress" mode="SingleSelectMaster" includeItemInSelection="true">
						<StandardTreeItem title="{fac>text}" icon="{fac>ref}" iconDensityAware="false" type="Active" custom:to="{fac>custom}"/>
					</Tree>
				</content>
			</Page>
		</masterPages>
	</SplitApp>
</mvc:View>