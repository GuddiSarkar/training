<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.viewFacalty_Payment"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Training Management System" showHeader="false">
				<content>
					<HBox height="100%" class="bg">
						<Panel width="auto" height="93%" class="sapUiResponsiveMargin hd1 acr_pnl" visible="false">
							<headerToolbar>
								<Toolbar class="pan">
									<Title text="View Facalty Payment" textAlign="Center"/>
									<SearchField width="30%" class="sapUiSmallMargin srch15" search="onSearch"/>
								</Toolbar>
							</headerToolbar>
							<content>
								<Table id="adCrsTable" items="{course>/}" class="TableBorderTop" growing="true" growingThreshold="1">
									<columns height="20px">
										<Column width="8%" minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight cellBorderLeft">
											<Text text="ID"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight">
											<Text text="Facalty Name"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight">
											<Text text="Payment Type"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight">
											<Text text="Cheque Number"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight">
											<Text text="Name of Bank"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight">
											<Text text="Payment Date"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight">
											<Text text="Amount"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight">
											<Text text="Action"/>
										</Column>
									</columns>
									<items>
										<ColumnListItem>
											<cells>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Toolbar class="tbBorder">
													<Button icon="sap-icon://delete" class="b4 btn2" press="onClickDelete" ariaLabelledBy="deleteButtonLabel"/>
												</Toolbar>
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</content>
						</Panel>
						<Panel width="auto" height="93%" class="sapUiResponsiveMargin hd1 acr_pnl" visible="true">
							<headerToolbar>
								<Toolbar class="pan">
									<Title text="Bill" textAlign="Center"/>
								</Toolbar>
							</headerToolbar>
							<content>
								<HBox>
									<HBox class="billhb">
										<VBox class="billLogo">
											<Label text="PAYMENT RECEIPT" class="billText" design="Bold"></Label>
										</VBox>
									</HBox>
									<HBox class="billhb1">
										<VBox>
											<Toolbar class="tbBorder">
											<Label text="Bill No. "></Label>
											<Text text="001"></Text>
											</Toolbar>
										</VBox>
										<VBox>
											<Toolbar class="tbBorder">
											<Label text="Date "></Label>
											<Text text="26/05/2017"></Text>
											</Toolbar>
										</VBox>
									</HBox>
								</HBox>
							</content>
						</Panel>
					</HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>