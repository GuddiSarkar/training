<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.Facalty_Payment"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Training Management System" showHeader="false">
				<content>
					<HBox height="100%" class="bg">
						<Panel width="auto" class="sapUiResponsiveMargin hd1 acr_pnl">
							<headerToolbar>
								<Toolbar class="pan">
									<Title text="Facalty Payment" textAlign="Center"/>
									<SearchField width="30%" class="sapUiSmallMargin srch14" search="onSearch"/>
								</Toolbar>
							</headerToolbar>
							<content>
								<Table id="adCrsTable" items="{course>/}" class="TableBorderTop" growing="true" growingThreshold="1">
									<columns height="20px">
										<Column width="8%" styleClass="cellBorderRight cellBorderLeft">
											<Text text="ID"/>
										</Column>
										<Column styleClass="cellBorderRight">
											<Text text="Facalty Name"/>
										</Column>
										<Column styleClass="cellBorderRight">
											<Text text="Payment Type"/>
										</Column>
										<Column styleClass="cellBorderRight">
											<Text text="Cheque Number"/>
										</Column>
										<Column styleClass="cellBorderRight">
											<Text text="Name of Bank"/>
										</Column>
										<Column styleClass="cellBorderRight">
											<Text text="Payment Date"/>
										</Column>
										<Column styleClass="cellBorderRight">
											<Text text="Amount"/>
										</Column>
										<Column styleClass="cellBorderRight">
											<Text text="Action"/>
										</Column>
									</columns>
									<items>
										<ColumnListItem>
											<cells>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Toolbar class="tbBorder">
													<Button icon="sap-icon://edit" class="b3" press="onClickEdit" ariaLabelledBy="editButtonLabel"/>
													<Button icon="sap-icon://delete" class="b4 btn2" press="onClickDelete" ariaLabelledBy="deleteButtonLabel"/>
												</Toolbar>
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</content>
						</Panel>
					</HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>