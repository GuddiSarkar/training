<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.demoTMS.controller.viewStudent_Payment"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Training Management System" showHeader="false">
				<content>
					<HBox height="100%" class="bg">
						<Panel width="auto" height="93%" class="sapUiResponsiveMargin hd1 acr_pnl">
							<headerToolbar>
								<Toolbar class="pan">
									<Title text="View Student Payment" textAlign="Center"/>
									<SearchField width="30%" class="sapUiSmallMargin srch" search="onSearch"/>
								</Toolbar>
							</headerToolbar>
							<content>
								<Table id="adCrsTable" items="{course>/tb_stud_payment}" class="TableBorderTop" growing="true" growingThreshold="6">
									<columns height="20px">
										<Column width="8%" minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight cellBorderLeft">
											<Text text="ID"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight">
											<Text text="Student Name"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight">
											<Text text="Course Name"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight">
											<Text text="Transaction Type"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight">
											<Text text="cheque Number"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight">
											<Text text="Discount"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight">
											<Text text="Amount"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight">
											<Text text="Registration Fee"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight">
											<Text text="Tax"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight">
											<Text text="1st Installment"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight">
											<Text text="2nd Installment"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight">
											<Text text="3rd Installment"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight">
											<Text text="4th Installment"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true" styleClass="cellBorderRight">
											<Text text="5th Installment"/>
										</Column>
										<Column demandPopin="true" styleClass="cellBorderRight">
											<Text text="Action"/>
										</Column>
									</columns>
									<items>
										<ColumnListItem>
											<cells>
												<Text text="{course>stud_payment_id}"/>
												<Text text="{course>stud_payment_name}"/>
												<Text text="{course>stud_payment_course}"/>
												<Text text="{course>}"/>
												<Text text="{course>}"/>
												<Text text="{course>stud_payment_disc}"/>
												<Text text="{course>stud_payment_fee}"/>
												<Text text="{course>stud_payment_reg_fee}"/>
												<Text text="{course>stud_payment_tax}"/>
												<Text text="{course>stud_payment_instal_1}"/>
												<Text text="{course>stud_payment_instal_2}"/>
												<Text text="{course>stud_payment_instal_3}"/>
												<Text text="{course>stud_payment_instal_4}"/>
												<Text text="{course>stud_payment_instal_5}"/>
												<Toolbar class="tbBorder">
													<Button icon="sap-icon://delete" class="b4 btn2" press="onClickDelete" ariaLabelledBy="deleteButtonLabel"/>
												</Toolbar>
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</content>
						</Panel>
					</HBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>