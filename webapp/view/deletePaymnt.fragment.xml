<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" displayBlock="true" xmlns:l="sap.ui.layout">
	<Dialog id="deletepayment" title="Delete Payment">
		<content>
			<l:VerticalLayout id="containerLayout" width="100%">
								<HBox>
									<Input value="" class="acr_inp" id="c_idDel" visible="false"/>
									<Text text="Are you sure that you want to delete this?"></Text>
									
								</HBox>
			</l:VerticalLayout>
		</content>
		<Toolbar>
			<Button text="{i18n>ok}" press="onOkDelete"/>
			<ToolbarSpacer></ToolbarSpacer>
			<Button text="{i18n>Cancel}" press="onCloseDelete"/>
		</Toolbar>
	</Dialog>
</core:FragmentDefinition>