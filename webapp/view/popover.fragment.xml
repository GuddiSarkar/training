<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover
		title="{Name}"
		class="sapUiPopupWithPadding p1popover"
		placement="Bottom">
		<beginButton>
			<Button text="ok" press="handleCloseButton" />
		</beginButton>
		<content>
			<HBox>
				<VBox>
					<Label text="Name:"/>
				</VBox>
				<VBox>
					<Text text=""/>
				</VBox>
			</HBox>
			<HBox>
				<VBox>
					<Label text="Email:"/>
				</VBox>
				<VBox>
					<Text text=""/>
				</VBox>
			</HBox>
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>